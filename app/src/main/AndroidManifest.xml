<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cs65_final_project">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CS65_Final_Project">
        <activity android:name=".activities.RecipeViewActivity"></activity>
        <activity android:name=".activities.AddIngredientActivity" />
        <activity android:name=".activities.AllergiesActivity">
            <intent-filter>
                <action android:name="my_action.startAllergiesActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ProfileActivity">
            <intent-filter>
                <action android:name="my_action.startProfileActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ChangePasswordActivity"></activity>
        <activity android:name=".CreateAccountActivity"></activity>
        <activity android:name=".activities.HomeActivity"></activity>
    </application>

</manifest>