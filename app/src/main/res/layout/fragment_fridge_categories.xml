                android:textSize="25sp"
                android:layout_alignStart="@+id/beverages_button"
                android:layout_marginStart="40dp"
                android:textColor="@color/black" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="5dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/nuts"
                android:scaleType="fitEnd"
                android:paddingRight="60dp"
                android:background="@color/white"
                android:id="@+id/nuts_button"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/nuts"
                android:textSize="25sp"
                android:layout_alignStart="@+id/nuts_button"
                android:layout_marginStart="70dp"
                android:textColor="@color/black" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="5dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_others"
                android:scaleType="fitEnd"
                android:paddingRight="60dp"
                android:background="@color/white"
                android:id="@+id/others_button"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/others"
                android:textSize="25sp"
                android:layout_alignStart="@+id/others_button"
                android:layout_marginStart="60dp"
                android:textColor="@color/black" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
